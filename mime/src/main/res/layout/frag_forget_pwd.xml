<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <include layout="@layout/layout_line"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/forget_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/clr_72777b"
        app:tabSelectedTextColor="@color/clr_3780f7"
        app:tabIndicatorColor="@color/clr_3780f7"
        app:tabIndicatorHeight="@dimen/dp_1"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/ForgetPwdTabLayoutStyle"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/forget_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_common_bg"/>

</LinearLayout>