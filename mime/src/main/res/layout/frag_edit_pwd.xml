<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_bg">

    <include layout="@layout/layout_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/clr_common_line"
        android:layout_marginTop="@dimen/dp_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_12">

        <EditText
            android:id="@+id/et_old_pwd"
            style="@style/CommonEditView"
            android:hint="@string/hint_old_pwd"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btn_show_old_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragmentation_ic_right"/>

    </LinearLayout>

    <include layout="@layout/layout_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/clr_common_line"
        android:layout_marginTop="@dimen/dp_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_12">

        <EditText
            android:id="@+id/et_new_pwd"
            style="@style/CommonEditView"
            android:hint="@string/hint_new_pwd"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btn_show_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragmentation_ic_right"/>

    </LinearLayout>

    <include layout="@layout/layout_line"/>

    <TextView
        android:id="@+id/btn_confirm"
        style="@style/CommonButton"
        android:text="@string/btn_confirm" />

</LinearLayout>