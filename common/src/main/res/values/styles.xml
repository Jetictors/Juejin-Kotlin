<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- toolbar 文本 -->
    <style name="Toolbar.TitleText" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <!--windowBackground的背景颜色参照ui背景颜色-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:activityOpenEnterAnimation">@anim/step_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/step_out_right</item>
        <item name="android:windowBackground">@color/color_common_bg</item>
        <item name="android:colorBackground">@color/color_common_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">44dp</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- 公共的输入框样式 -->
    <style name="CommonEditView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/clr_black</item>
        <item name="android:textColor">@color/clr_black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- 公共的按钮样式 -->
    <style name="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_btn</item>
        <item name="android:textColor">@color/common_btn_tx_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:layout_marginStart">@dimen/dp_24</item>
        <item name="android:layout_marginEnd">@dimen/dp_24</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:gravity">center</item>
    </style>
</resources>