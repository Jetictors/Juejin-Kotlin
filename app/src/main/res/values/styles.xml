<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainBottom">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/common_btn_tx_color</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dp_3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowBackground">@mipmap/background_splash</item>-->
    </style>

</resources>
